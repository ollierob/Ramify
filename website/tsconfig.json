{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": ".buildInfo",
    "outDir": "target/classes/webroot",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "noImplicitReturns": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": "src"
  },
  "include": [
    "./src/main/ts/**/*"
  ],
  "exclude": [
    "./src/**/*.test.ts"
  ]
}