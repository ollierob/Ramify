<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:ns1="http://ramify.net/people" xmlns:ns2="http://ramify.net/dates" xmlns:tns="http://ramify.net/events" targetNamespace="http://ramify.net/events" version="1.0">
    
  <xs:import namespace="http://ramify.net/people" schemaLocation="people.xsd"/>
    
  <xs:import namespace="http://ramify.net/dates" schemaLocation="dates.xsd"/>
    
  <xs:element name="baptism" type="tns:xmlBaptismEvent"/>
    
  <xs:element name="birth" type="tns:xmlBirthEvent"/>
    
  <xs:element name="burial" type="tns:xmlBurialEvent"/>
    
  <xs:element name="death" type="tns:xmlDeathEvent"/>
    
  <xs:element name="event" type="tns:xmlEvent"/>
    
  <xs:element name="marriage" type="tns:xmlMarriageEvent"/>
    
  <xs:element name="personEvent" type="tns:xmlPersonEvent"/>
    
  <xs:element name="probate" type="tns:xmlProbateEvent"/>
    
  <xs:element name="residence" type="tns:xmlResidenceEvent"/>
    
  <xs:complexType name="xmlBaptismEvent">
        
    <xs:complexContent>
            
      <xs:extension base="tns:xmlPersonEvent">
                
        <xs:sequence/>
              
      </xs:extension>
          
    </xs:complexContent>
      
  </xs:complexType>
    
  <xs:complexType abstract="true" name="xmlPersonEvent">
        
    <xs:complexContent>
            
      <xs:extension base="tns:xmlEvent">
                
        <xs:sequence>
                    
          <xs:choice minOccurs="0">
                        
            <xs:element ref="ns1:exactAge"/>
                        
            <xs:element ref="ns1:approximateAge"/>
                        
            <xs:element ref="ns1:ageRange"/>
                      
          </xs:choice>
                  
        </xs:sequence>
                
        <xs:attribute name="placeId" type="xs:string"/>
                
        <xs:attribute name="age" type="xs:int"/>
                
        <xs:attribute name="occupation" type="xs:string"/>
              
      </xs:extension>
          
    </xs:complexContent>
      
  </xs:complexType>
    
  <xs:complexType name="xmlEvent">
        
    <xs:choice>
            
      <xs:element ref="ns2:xmlBeforeDate"/>
            
      <xs:element ref="ns2:inYear"/>
            
      <xs:element ref="ns2:onDate"/>
            
      <xs:element ref="ns2:inQuarter"/>
            
      <xs:element ref="ns2:betweenYears"/>
            
      <xs:element ref="ns2:inMonth"/>
            
      <xs:element ref="ns2:xmlBeforeYear"/>
          
    </xs:choice>
        
    <xs:attribute name="id" type="xs:string"/>
      
  </xs:complexType>
    
  <xs:complexType name="xmlBirthEvent">
        
    <xs:complexContent>
            
      <xs:extension base="tns:xmlPersonEvent">
                
        <xs:sequence/>
              
      </xs:extension>
          
    </xs:complexContent>
      
  </xs:complexType>
    
  <xs:complexType name="xmlMarriageEvent">
        
    <xs:complexContent>
            
      <xs:extension base="tns:xmlPersonEvent">
                
        <xs:sequence/>
                
        <xs:attribute name="spouse" type="xs:string" use="required"/>
              
      </xs:extension>
          
    </xs:complexContent>
      
  </xs:complexType>
    
  <xs:complexType name="xmlResidenceEvent">
        
    <xs:complexContent>
            
      <xs:extension base="tns:xmlPersonEvent">
                
        <xs:sequence/>
              
      </xs:extension>
          
    </xs:complexContent>
      
  </xs:complexType>
    
  <xs:complexType name="xmlDeathEvent">
        
    <xs:complexContent>
            
      <xs:extension base="tns:xmlPersonEvent">
                
        <xs:sequence/>
                
        <xs:attribute name="cause" type="xs:string"/>
              
      </xs:extension>
          
    </xs:complexContent>
      
  </xs:complexType>
    
  <xs:complexType name="xmlBurialEvent">
        
    <xs:complexContent>
            
      <xs:extension base="tns:xmlPersonEvent">
                
        <xs:sequence/>
                
        <xs:attribute name="plot" type="xs:string"/>
              
      </xs:extension>
          
    </xs:complexContent>
      
  </xs:complexType>
    
  <xs:complexType name="xmlProbateEvent">
        
    <xs:complexContent>
            
      <xs:extension base="tns:xmlPersonEvent">
                
        <xs:sequence/>
              
      </xs:extension>
          
    </xs:complexContent>
      
  </xs:complexType>
  
</xs:schema>
