<?xml version="1.0" encoding="UTF-8" ?>

<churchInfos
        xmlns="http://ramify.net/places"
        xmlns:d="http://ramify.net/dates"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://ramify.net/places ../../../../schema/schema1.xsd http://ramify.net/dates ../../../../schema/schema2.xsd">

    <churchInfo id="heptonstall-st-thomas" denomination="Church of England">
        <d:foundedBefore date="1260"/>
        <churchRecordSet id="heptonstall-st-thomas-baptisms" type="baptism" startYear="1599" endYear="1812"/>
        <churchRecordSet id="heptonstall-st-thomas-marriages" type="marriage" startYear="1593" endYear="1755"/>
        <churchRecordSet id="heptonstall-st-thomas-burials" type="burial" startYear="1593" endYear="1812"/>
        <description>
            Heptonstall's old church, dedicated to St Thomas a Becket, was founded before 1260.
        </description>
    </churchInfo>

    <churchInfo id="birchcliffe" denomination="Baptist">
        <d:foundedIn year="1763"/>
        <d:closedIn year="1974"/>
        <churchRecordSet id="birchcliffe-births" type="birth" startYear="1785" endYear="1837"/>
        <churchRecordSet id="birchcliffe-burials" type="burial" startYear="1816" endYear="1920"/>
        <description>
            Birchcliffe was opened on the 12th December 1763 by Daniel Taylor.
        </description>
    </churchInfo>

</churchInfos>